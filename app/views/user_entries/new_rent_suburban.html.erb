<h1>Новое объявление об аренде Загородных помещений</h1>

<% form_for(@rent_entry,:url => {:action => "create_rent_suburban"}) do |f| %>
  <%= f.error_messages %>
  <p>
		<%= f.label "Ближайшее шоссе" %><br />
		<%= select("highway", "id", Highway.all.collect {|h| [ h.name, h.id ] }, {:include_blank => 'Нету'}) %>
		в <%= f.text_field :distance_to_mkad, :size => 3 %>км от МКАД
  </p>
  <p>
    <%= f.label "Город" %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label "Улица" %><br />
    <%= f.text_field :street %>
  </p>
  <p>
    <%= f.label "Номер дома" %><br />
    <%= f.text_field :house_number %>
  </p>
  <p>
    <%= f.label "Тип недвижимости" %><br />
		<%=	f.select( :realty_type, RealtyType.get_suburban_types ) %>
  </p>
  <p>
    <%= f.label "Площадь дома" %><br />
    <%= f.text_field :area_house %>
  </p>
  <p>
    <%= f.label "Этажей" %><br />
    <%= f.text_field :floor_number %>
  </p>
  <p>
    <%= f.label "Площадь участка" %><br />
    <%= f.text_field :area_plot %>
  </p>

  <p>
    <%= f.label "Цена" %><br />
    <%= f.text_field :rent_price %> руб/мес
  </p>

  <p>
    <%= f.label "Срок аренды" %><br />
		<%=	f.select( :rent_time_type, RentTimeTypes.get_rent_time_types ) %>
  </p>
	<p>
    <%= f.label "Коммиссия для Агентов" %><br />
    <%= f.text_field :commission_agent, :size => 3 %>%
  </p>
	
  <p>
    <%= f.label :contacts %><br />
    <%= f.text_area :contacts %>
  </p>
	
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', entries_path %>
