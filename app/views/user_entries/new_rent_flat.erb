<h1>Новое объявление об аренде комнаты\квартиры в Москве или МО</h1>
<% form_for(@rent_entry,@ess,@subway_stations,:url => {:action => "create_rent_flat"}) do |f| %>
  <%= f.error_messages %>
  <p>
		<%= f.label "Ближайшая станция метро" %><br />
		<%= select("subway_station", "id", SubwayStation.all.collect {|p| [ p.name, p.id ] }, {:include_blank => 'Нету'}) %>
		<%= text_field "subway_station", "time_to", :size => 4 %> мин.
  </p>
  <p>
    <%= f.label "Город" %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label "Район МО" %><br />
		<%= select("mo_district", "id", MoDistrict.all.collect {|d| [ d.name, d.id ] }, {:include_blank => 'Другой'}) %>
  </p>
  <p>
    <%= f.label "Улица" %><br />
    <%= f.text_field :street %>
  </p>
  <p>
    <%= f.label "Номер дома" %><br />
    <%= f.text_field :house_number %>
  </p>
  <p>
    <%= f.label "Количество комнат" %><br />
    <%= f.text_field :rooms_count %>
  </p>
  <p>
    <%= f.label "Площадь суммарная" %><br />
    <%= f.text_field :area_total %>
  </p>
  <p>
    <%= f.label "Площадь кухни" %><br />
    <%= f.text_field :area_kitchen %>
  </p>
  <p>
    <%= f.label "Цена" %><br />
    <%= f.text_field :rent_price %> руб/мес
  </p>
  <p>
    <%= f.label "Срок аренды" %><br />
		<%=	f.select( :rent_time_type, RentTimeTypes.get_rent_time_types ) %>
  </p>
  <p>
		<%= f.label "Этаж:" %><br />
    <%= f.text_field :floor_number %>
  </p>
    <p>
			<%= f.label "Телефон:" %><br />
      <%= f.check_box :phone %>
    </p>
    <p>
			<%= f.label "Телевизор:" %><br />
      <%= f.check_box :tv -%>
    </p>
    <p>
			<%= f.label "Холодильник:" %><br />
      <%= f.check_box :refridgerator -%>
    </p>
    <p>
			<%= f.label "Стиральная машина:" %><br />
      <%= f.check_box :washing_machine -%>
    </p>
  <p>
    <%= f.label :contacts %><br />
    <%= f.text_area :contacts %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', entries_path %>
