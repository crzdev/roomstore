<div id="new_rent_flat_and_room" >
	<h1>Новое объявление об аренде комнаты\квартиры</h1>
	<%= error_messages_for :renty_entry, :address %>
	<% form_for(@rent_entry,@address, :url => {:action => "create_rent"}) do |f| %>
  <%= f.error_messages %>
  <p>
		<%= f.label "Ближайшее шоссе" %><br />
		<%= select("highway", "id", Highway.all.collect {|h| [ h.name, h.id ] }, {:include_blank => 'Не выбрано'}) %>
		в <%= f.text_field :distance_to_mkad, :size => 3 %>км от МКАД
  </p>
  <p>
		<%= f.label "Ближайшая станция метро" %><br />
		<%= select("subway_station", "id", SubwayStation.all.collect {|p| [ p.name, p.id ] }, {:include_blank => 'Не выбрано'}) %>
		<%= text_field_tag "subway_station_time_to","", {:size => 4} %> мин.
  </p>
  <p>
    <%= f.label "Район МО" %><br />
		<%= select("address_text", "sub_administrative_area",SubAdministrativeArea.find(:all,:conditions => ["administrative_area_id = ?", 1]).collect {|saa| [ saa.name, saa.name ] }, {:include_blank => 'Не выбрано'}) %>
  </p>
  <p>
    <%= f.label "Населенный пункт" %><br />
    <%= text_field "address_text", "locality" %>
  </p>
  <p>
    <%= f.label "Улица" %><br />
    <%= text_field "address_text", "street" %>
  </p>
  <p>
    <%= f.label "Дом" %><br />
    <%= text_field "address_text", "premise" %>
  </p>
  <p>
    <%= f.label "Количество комнат" %><br />
    <%= f.text_field :rooms_count %>
  </p>
  <p>
    <%= f.label "Площадь суммарная" %><br />
    <%= f.text_field :area_total %>
  </p>
  <p>
    <%= f.label "Площадь кухни" %><br />
    <%= f.text_field :area_kitchen %>
  </p>
  <p>
    <%= f.label "Цена" %><br />
    <%= f.text_field :rent_price %> руб/мес
  </p>
  <p>
    <%= f.label "Срок аренды" %><br />
		<%=	f.select( :rent_time_type, RentTimeTypes.get_rent_time_types ) %>
  </p>
  <p>
		<%= f.label "Этаж:" %><br />
    <%= f.text_field :floor_number %>
  </p>
    <p>
			<%= f.label "Телефон:" %><br />
      <%= f.check_box :phone %>
    </p>
    <p>
			<%= f.label "Телевизор:" %><br />
      <%= f.check_box :tv -%>
    </p>
    <p>
			<%= f.label "Холодильник:" %><br />
      <%= f.check_box :refridgerator -%>
    </p>
    <p>
			<%= f.label "Стиральная машина:" %><br />
      <%= f.check_box :washing_machine -%>
    </p>
  <p>
    <%= f.label :contacts %><br />
    <%= f.text_area :contacts %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', entries_path %>
</div>
