<h1>New user</h1>
<div class="depot-form">
<%= error_messages_for :user %>
<fieldset>Enter User Details
	<% form_for(@user) do |f| %>
  <p>
    <label for="user_login">Login:</label>
    <%= f.text_field :login, :size => 40 %>
  </p>


  <p>
    <label for="user_name">Name:</label>
    <%= f.text_field :name, :size => 40 %>
  </p>

  <p>
    <label for="user_surname">Surname:</label>
    <%= f.text_field :surname, :size => 40 %>
  </p>

  <p>
    <label for="user_type">Type:</label>
    <%=	f.collection_select(:type,User.avalible_subtypes, :to_s, :to_s ) %> 
  </p>
  <p>
    <label for="user_password">Password:</label>
    <%= f.password_field :password, :size => 40 %>
  </p>
  <p>
    <label for="user_password_confirmation">Confirm:</label>
    <%= f.password_field :password_confirmation, :size => 40 %>
  </p>
  <p>
    <label for="group_id">Group ID:</label>
    <%= f.text_field :group_id, :size => 40 %>
  </p>

  <p>
    <%= f.submit "Add User" , :class => "submit" %>
  </p>
	<% end %>
</fieldset>
