<%= javascript_include_tag "mo_districts" %>
<% form_for(@search_condition, :url => {:action => "result_office_mo"}) do |f| %>
<div id="search">
  <div id="search_conditions" class="column">
    <h1>Поиск по нежелым помещениям в Московской Областе</h1>
    <p>
      <label for="locality">Город:</label>
      <%= f.text_field :locality, :size => 40 %>
    </p>
    <p>
      <label for="realty_type">Тип недвижимости:</label>
			<% for  type in RealtyType.get_nonresid_types -%>
      <%= check_box_tag "search_condition[realty_types][]", "#{type[1]}" -%>
      <%= "#{type[0]}" -%>
      <% end -%>
    </p>
    <p>
      <label for="total_area">Общая площадь от:</label>
      <%= f.text_field :total_area, :size => 40 %>
    </p>
    <p>
      <label for="Rooms count">Количество комнат:</label>
      <%= f.text_field :rooms_count, :size => 40 %>
    </p>
    <p>
      <label for="price">Цена</label>
      <label for="Min_Price">от:</label>
      <%= f.text_field :min_price, :size => 10 %>
      <label for="Max_Price">до:</label>
      <%= f.text_field :max_price, :size => 10 %> руб.
    </p>
    <p>
      <label for="furniture">Мемель:</label>
			<%=  f.radio_button( "furniture","yes") %>
      <label for="furniture">есть,</label>
			<%=  f.radio_button( "furniture", "no_matter",:checked => true) %>
      <label for="furniture">неважно,</label>
			<%=  f.radio_button( "furniture", "no") %>
      <label for="furniture">нет</label>
    </p>
    <p>
      <label for="Time_To_Nearest_Subway_Station">Время до ближайшей станции метро:</label>
      <%= f.text_field :time_to_nearest_subway_station, :size => 10 %> мин.
    </p>
    <p>
      <%= f.submit "Найти!" , :class => "submit" %>
    </p>
  </div>
  <div id="mo_map" class="column">
    <div id="cool_map_selector">
			<p>
				Тут будет карта
			</p>
    </div>
    <div id="options_map_selection">
			<%= select "mo_districts","district", AdministrativeArea.get_mo_sub_administrative_areas.collect { |el| [el.name, el.id]},{},{:size =>10,:ondblclick=>"add_d();"}  %>
			<input id="add_button" type=button name=add value="->" onclick="add_d();">
      <input id="remove_button" type=button name=del value="<-" onclick="del_d();">
      <select id="search_condition_mo_districts" name="search_condition[mo_districts][]" size=10 multiple style="width:150px;" ondblclick="del_d();">
      </select>
      <input id="clear_button" type="button" value="  Очистить!  " onclick="freset();">
    </div>
  </div>
</div>
<% end %>
<div class="clear"></div>

