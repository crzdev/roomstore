<h1>New Search</h1>
<fieldset>Search Condidtions:
	<% form_for(@search_condition, :url => {:action => "result"}) do |f| %>
  <p>
    <label for="City">Город:</label>
    <%= f.text_field :city, :size => 40 %>
  </p>
    <label for="District">Район:</label>
    <%= f.text_field :district, :size => 40 %>
  </p>
  <p>
    <label for="Street">Улица:</label>
    <%= f.text_field :street, :size => 40 %>
  </p>
  <p>
    <label for="Rooms count">Количество комнат:</label>
    <%= f.text_field :rooms_count, :size => 40 %>
  </p>
  <p>
    <label for="price">Цена</label>
    <label for="Min_Price">от:</label>
    <%= f.text_field :min_price, :size => 10 %>
    <label for="Max_Price">до:</label>
    <%= f.text_field :max_price, :size => 10 %>
  </p>
  <p>
    <label for="total_area">Общая площадь от:</label>
    <%= f.text_field :total_area, :size => 40 %>
  </p>
  <p>
    <label for="Kitchen_Area">Кухня площадь от:</label>
    <%= f.text_field :kitchen_area, :size => 40 %>
  </p>
  <p>
    <label for="Live_Area">Жилая площадь от:</label>
    <%= f.text_field :live_area, :size => 40 %>
  </p>
  <p>
    <label for="Rent_Time">Срок аренды:</label>
    <%= f.text_field :rent_time, :size => 40 %>
  </p>
  <p>
    <label for="nearest_subway_stations">Ближайшие станции метро:</label>
    <%= f.text_field :nearest_subway_stations, :size => 40 %>
  </p>
  <p>
    <label for="Time_To_Nearest_Subway_Station">Время до ближайшей станции метро:</label>
    <%= f.text_field :time_to_nearest_subway_station, :size => 40 %>
  </p>
  <p>
    <label for="has_photo">has_photo:</label>
    <%= f.text_field :has_photo, :size => 40 %>
  </p>
  <p>
    <%= f.submit "Search" , :class => "submit" %>
  </p>
	<% end %>
</fieldset>

