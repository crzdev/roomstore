<% form_for(@search_condition, :url => {:action => "result_suburban"}) do |f| %>
<div id="search">
  <div id="search_conditions" class="column">
    <h1>Поиск по Квартирам, Дачам, Котеджам</h1>
    <p>
      <label for="City">Город:</label>
      <%= f.text_field :city, :size => 40 %>
    </p>
    <p>
      <label for="realty_type">Тип недвижимости:</label>
			<% for  type in @realty_types -%>
      <%= check_box_tag "search_condition[realty_types][]", "#{type[1]}" -%>
      <%= "#{type[0]}" -%>
      <% end -%>
    </p>
    <p>
      <label for="distance_to_mkad">Время до МКАД:</label>
      <label for="min_distance_to_mkad">от:</label>
      <%= f.text_field :min_distance_to_mkad, :size => 10 %>
      <label for="max_distance_to_mkad">от:</label>
      <%= f.text_field :max_distance_to_mkad, :size => 10 %> км.
    </p>
    <p>
      <label for="price">Цена</label>
      <label for="Min_Price">от:</label>
      <%= f.text_field :min_price, :size => 10 %>
      <label for="Max_Price">до:</label>
      <%= f.text_field :max_price, :size => 10 %> руб.
    </p>
    <p>
      <label for="area_house">Площадь дома</label>
      <label for="Min_Area_House">от:</label>
      <%= f.text_field :min_area_house, :size => 10 %>
      <label for="Max_Area_House">до:</label>
      <%= f.text_field :max_area_house, :size => 10 %> м2.
    </p>
    <p>
      <label for="area_plot">Площадь участка</label>
      <label for="Min_Area_Plot">от:</label>
      <%= f.text_field :min_area_plot, :size => 10 %>
      <label for="Max_Area_Plot">до:</label>
      <%= f.text_field :max_area_plot, :size => 10 %> сот.
    </p>
    <p>
      <label for="Rent_Time">Срок аренды:</label>
      <%= f.select :rent_time_type, @rent_time_types %>
    </p>
    <p>
      <label for="has_photo">Только с фотографиями</label>
      <%= f.check_box :has_photo, :size => 40 %>
    </p>
    <p>
      <%= f.submit "Найти!" , :class => "submit" %>
    </p>
  </div>
  <div id="mo_map" class="column">
    <div id="cool_map_selector">
			<p>
				Тут будет карта
			</p>
    </div>
    <div id="options_map_selection">
			<%= select "highways","highway", @higways.collect { |el| [el.name, el.id]},{},{:size =>10,:ondblclick=>"add_h();"}  %>
			<input id="add_button" type=button name=add value="->" onclick="add_h();">
      <input id="remove_button" type=button name=del value="<-" onclick="del_h();">
      <select id="search_condition_highways" name="search_condition[highways][]" size=10 multiple style="width:150px;" ondblclick="del_h();">
      </select>
      <input id="clear_button" type="button" value="  Очистить!  " onclick="freset();">
    </div>
  </div>
</div>
<% end %>
<div class="clear"></div>

