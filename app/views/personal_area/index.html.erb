	 <div class="row">
		 <div class="column">
			 <labe class="simple_label">Ваша учётная запись входит в группу:</label>
      </div>
      <div class="column">
				<span class="value_text"><%= @group.name %></span>
			</div>
    </div>
</div>
<% end %>
</div>

